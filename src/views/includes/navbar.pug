        link(rel='stylesheet', href='/static/stylesheets/navbar.css')

        script(src='https://kit.fontawesome.com/5aea80cc0d.js', crossorigin='anonymous')


    body

        // NAVIGATION BAR
        nav.navbar.navbar-expand-md.bg-gradient(role='navigation' aria-label='Navigation Bar')
            .container-fluid
                a.navbar-brand.text-white(href='/' aria-label='Home' tabindex='-1')

                    // MOBILE
                    #mobileHeader
                        img.me-2.d-inline-block(src='/static/images/fountain_white.png', alt='ycp_fountain', width='auto', height='25' aria-label='Home')
                        | YCP Hacks

                    // DESKTOP
                    #desktopHeader
                        .me-2.d-inline-block
                            img(src='/static/images/fountain_white.png', alt='ycp_fountain', width='auto', height='25')
                            a.replaceText.text-decoration-none#style-2(href='/', data-replace='Home' aria-label='Home')
                                span YCP Hacks

                button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#collapsibleNavbar' aria-label='Menu')
                    span.navbar-toggler-icon
                |
                #collapsibleNavbar.collapse.navbar-collapse.justify-content-end
                    ul.navbar-nav
                        //li.nav-item
                        //    // TODO: past hackathons
                        //    a.navbarLink.nav-link(href='#') Hackathons
                        //|
                        li.nav-item
                            a.navbarLink.nav-link(href='gallery') Gallery
                        |
                        li.nav-item
                            a.navbarLink.nav-link(href='judging_criteria') Judging Criteria
                        //|
                        //li.nav-item
                        //    a.navbarLink.nav-link(href='hardwareList') Hardware
                        |
                        li.nav-item
                            a.navbarLink.nav-link(href='past_events') Past Events
                        |
                        if(isAuthenticated)
                            li.nav-item.dropdown
                                a.nav-link.dropdown-toggle.me-3(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                                    | Account
                                ul.dropdown-menu.dropdown-menu.end.dropdown-menu-lg-start
                                    li
                                        a.dropdown-item(href='/dashboard') Dashboard
                                    li
                                        hr.dropdown-divider
                                    li
                                        a.dropdown-item(href='/logout') Logout
                        else
                            li.nav-item
                                a.navbarLink.nav-link(href='/dashboard') Login
            a#mlh-trust-badge(style='display:block;max-width:100px;min-width:60px;position:absolute;right:50px;top:0;width:10%;z-index:10000', href='https://mlh.io/na?utm_source=na-hackathon&utm_medium=TrustBadge&utm_campaign=2023-season&utm_content=blue', target='_blank')
                img.mlh-logo(src='https://s3.amazonaws.com/logged-assets/trust-badge/2023/mlh-trust-badge-2023-blue.svg', alt='Major League Hacking 2023 Hackathon Season', style='width:100%')